{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending",
        "Rejected",
        "Published"
      ]
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "blogs"
    }
  }
}
